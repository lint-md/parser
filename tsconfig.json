{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ESNext",
    "outDir": "dist/tmp",
    "rootDir": "./src",
    "module": "CommonJS",
    "declaration": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "types": ["jest", "node"],
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true
  },
  "include": ["src/**/*"]
}
